// Layout

.column {
  display: flex;
  flex-direction: column;
}

.column-center {
  align-items: center;
}

.full-width {
  width: 100%;
}

.half-width {
  width: 50%;
}

.column-vertical-center {
  justify-content: center;
}

.column-left {
  align-items: flex-start;
}

.row {
  align-items: center;
  display: flex;
  flex-direction: row;
}

.row-top {
  align-items: flex-start;
}

.row-bottom {
  align-items: flex-end;
}

.row-center {
  justify-content: center;
}

.row-left {
  justify-content: flex-start;
}

.row-right {
  justify-content: flex-end;
}

.row-space-between {
  justify-content: space-between;
}

.item-center {
  align-self: center;
  text-align: center;
}

.item-left {
  align-self: flex-start;
  text-align: left;
}

.item-right {
  align-self: flex-end;
  text-align: right;
}

.flex-grow-1 {
  flex-grow: 1;
}

@for $i from 1 through 3 {
  .item-#{$i} {
    flex: $i;
    min-width: 0;
  }
}

// Paddings

.padding-5 {
  padding: 5px;
}

