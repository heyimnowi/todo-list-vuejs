@import url('https://fonts.googleapis.com/css?family=Open+Sans');

$grey = #CCCCCC

html,
body
  background-color: #F3F5FA;

*,
h1,
label
  font-family: 'Open Sans', sans-serif;
  color: #525252;

.title
  font-size 26px
  line-height 26px
  margin-bottom 10px

.subtitle
  color $grey
  font-size 16px
  line-height 16px
  margin-bottom 30px

.content-wrapper
  transform translateX(-50%)
  position absolute
  left 50%
  top 70px
  background-color white
  padding 50px
  border-radius 10px
  width 500px;

.todo-item
  list-style-type: none;
  padding: 10px 0;

.todo-list
  padding: 0;
  margin: 0;

.delete-button
  width 12px
  height 12px

.custom-checkbox
  position: relative;
  padding-left: 30px;

  input
    opacity 0
    position: absolute;
    left: 0;
    height: 15px;
    width: 15px;
    z-index 10

  input:checked + label:before
    background-color #20BF55

  input:checked + label
    text-decoration line-through
    color #C0C0C0

  label:before
    content: '';
    width: 14px;
    height: 14px;
    border: 0;
    background-color: #F44033;
    position: absolute;
    left: 0;
    border-radius: 100%;

.add-input input
  width: 100%;
  padding-bottom: 10px;
  border-bottom: 1px solid #C0C0C0;
  margin-top: 30px;

.add-input
  position relative

  button
    position: absolute;
    right: 0;
    top: 50%;
    height: 25px;
    width: 25px;

    img
      width 100%
      height 100%
